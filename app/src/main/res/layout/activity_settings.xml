<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_above="@+id/lButtonLayout"
        android:layout_alignParentTop="true"
        android:layout_weight="1">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.marceljurtz.lifecounter.Settings.SettingsActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rlHeadline"
                android:paddingBottom="10dp"
                android:layout_alignParentTop="true"
                android:gravity="fill">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cmdBack"
                    android:src="@drawable/ic_keyboard_backspace_24dp"
                    android:background="@android:color/transparent"
                    android:layout_alignParentLeft="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_centerHorizontal="true"
                    android:text="@string/settings_title"
                    android:id="@+id/lblHeadline" />
            </RelativeLayout>


            <!-- BLACK -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlHeadline"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/lColorBlack"
                android:paddingBottom="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/setting_color_black"
                    android:id="@+id/lblColorBlack" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtColorBlack"
                    android:hint="Black" />

                <Button
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_weight="0"
                    android:background="@drawable/button_round"
                    android:id="@+id/cmdSelectBlack" />
            </LinearLayout>

            <!-- BLUE -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lColorBlack"
                android:id="@+id/lColorBlue"
                android:paddingBottom="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/setting_color_blue"
                    android:id="@+id/lblColorBlue" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtColorBlue"
                    android:hint="Blue" />

                <Button
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_weight="0"
                    android:background="@drawable/button_round"
                    android:id="@+id/cmdSelectBlue" />
            </LinearLayout>

            <!-- GREEN -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lColorBlue"
                android:id="@+id/lColorGreen"
                android:paddingBottom="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/setting_color_green"
                    android:id="@+id/lblColorGreen" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:paddingRight="16dp"
                    android:paddingEnd="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtColorGreen"
                    android:hint="Green" />

                <Button
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_weight="0"
                    android:background="@drawable/button_round"
                    android:id="@+id/cmdSelectGreen" />
            </LinearLayout>

            <!-- RED -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lColorGreen"
                android:id="@+id/lColorRed"
                android:paddingBottom="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/setting_color_red"
                    android:id="@+id/lblColorRed" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtColorRed"
                    android:hint="Red" />

                <Button
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_weight="0"
                    android:background="@drawable/button_round"
                    android:id="@+id/cmdSelectRed" />
            </LinearLayout>

            <!-- WHITE -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lColorRed"
                android:id="@+id/lColorWhite"
                android:paddingBottom="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/setting_color_white"
                    android:id="@+id/lblColorWhite" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtColorWhite"
                    android:hint="White" />

                <Button
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_weight="0"
                    android:background="@drawable/button_round"
                    android:id="@+id/cmdSelectWhite" />
            </LinearLayout>

            <!-- LIVES -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lColorWhite"
                android:id="@+id/lLiveSelection">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/setting_default_lives"
                    android:id="@+id/lblLiveSelection"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="0"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtLiveSelection"
                    android:hint="20"
                    android:ems="5"
                    android:maxLength="3"
                    android:textAlignment="center"
                    android:nextFocusUp="@id/txtLiveSelection"
                    android:nextFocusLeft="@id/txtLiveSelection"/>

            </LinearLayout>

            <!-- LONGCLICK - POINTS -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lLiveSelection"
                android:id="@+id/lLongClickPoints">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/setting_default_long_click_points"
                    android:id="@+id/lblLongClickPoints" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="0"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtLongClickPoints"
                    android:hint="5"
                    android:ems="5"
                    android:maxLength="2"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/lLongClickPoints"
                android:id="@+id/lKeepScreenOn">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/setting_screen_timeout_disable"
                    android:id="@+id/lblKeepScreenOn" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:paddingEnd="16dp"
                    android:paddingRight="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/chkKeepScreenOn" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lButtonLayout"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_reset"
                android:id="@+id/cmdResetSettings"
                android:background="@drawable/button_regular"
                android:layout_margin="5dp" />
    </LinearLayout>
</RelativeLayout>