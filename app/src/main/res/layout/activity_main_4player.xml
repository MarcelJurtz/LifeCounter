<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marceljurtz.lifecounter.Game.GameActivity">

    <RelativeLayout
        android:id="@+id/rlActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tbMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbarBackground">

        </android.support.v7.widget.Toolbar>


        <!-- ################################### -->
        <!--            CENTER LAYOUT            -->
        <!-- ################################### -->

        <RelativeLayout
            android:id="@+id/layout_center"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/settingsBar">

            <!-- Toggle PoisonCounter -->
            <ImageButton
                android:id="@+id/cmdTogglePoison"
                android:rotation="90"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="40dp"
                android:layout_above="@id/cmdResetLP"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_poison_disabled" />

            <!-- Reset-Button -->
            <ImageButton
                android:id="@+id/cmdResetLP"
                android:rotation="90"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_reload" />

            <!-- Toggle Color Settings -->
            <ImageButton
                android:id="@+id/cmdToggleColors"
                android:rotation="90"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_below="@id/cmdResetLP"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_settings_disabled" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/layout_center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl4Player1"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:background="@color/mtg_black">

                <!-- PLAYER 1 -->
                <TextView
                    android:id="@+id/txtLifeCount4p1"
                    android:rotation="90"
                    android:layout_centerInParent="true"
                    style="@style/mtg_textview_lifepoints" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl4Player3"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="@color/mtg_black">

                <!-- PLAYER 3 -->
                <TextView
                    android:id="@+id/txtLifeCount4p3"
                    android:rotation="90"
                    android:layout_centerInParent="true"
                    style="@style/mtg_textview_lifepoints" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/layout_center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl4Player2"
                android:layout_weight="1"
                android:background="@color/mtg_black">

                <!-- PLAYER 2 -->
                <TextView
                    android:id="@+id/txtLifeCount4p2"
                    android:layout_centerInParent="true"
                    android:rotation="270"
                    style="@style/mtg_textview_lifepoints" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl4Player4"
                android:layout_weight="1"
                android:background="@color/mtg_black">

                <!-- PLAYER 4 -->
                <TextView
                    android:id="@+id/txtLifeCount4p4"
                    android:rotation="270"
                    android:layout_centerInParent="true"
                    style="@style/mtg_textview_lifepoints" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
